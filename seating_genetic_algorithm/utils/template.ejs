<style>
  .body {
    margin: 56px 108px;
    page-break-after: always;
  }
  .header {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 24px;
  }
  .college {
    margin-left: 24px;
    font-size: 28px;
  }
  .details {
    display: flex;
    justify-content: space-between;
  }
  .title,
  .date {
    font-size: 16px;
  }
  .room-name {
    font-size: 24px;
    text-align: center;
    margin-bottom: 24px;
  }
  table {
    border-collapse: collapse;
    caption-side: bottom;
    margin: 10px auto;
  }
  table,
  th,
  td {
    border: solid 1px #000;
    padding: 10px;
  }
  th,
  td {
    padding: 8px 16px;
  }
  .seat-heading {
    margin-top: 32px;
    font-size: 24px;
    text-align: center;
  }
  .seat {
    text-align: center;
    width: 50px;
  }
</style>

<% for(room of rooms) { %>
<div class="body">
  <div class="header">
    <img
      width="50"
      height="50"
      src="https://storage.googleapis.com/ezap-prod/colleges/8538/pillai-college-of-engineering-navi-mumbai-logo.png"
      alt="college logo"
    />
    <h1 class="college">Pillai College of Engineering (PCE)</h1>
  </div>

  <div class="details">
    <h1 class="title">Exam: <%= examDetails.title %></h1>
    <h1 class="date">Date: <%= examDetails.dateOfExam %></h1>
  </div>

  <h1 class="room-name">Room: <%= room.name %></h1>

  <table>
    <tr>
      <th>Sr. No.</th>
      <th>Subject</th>
      <th>Roll Number</th>
    </tr>
    <% let index = 1 %> <% for(const subject in room.subjectDetails) { %>
    <tr>
      <td><%= index++ %></td>
      <td><%= subject %></td>
      <% let rollNumbers = room.subjectDetails[subject].length===1 ?
      room.subjectDetails[subject][0] : room.subjectDetails[subject].join(" - ")
      %>
      <td><%= rollNumbers %></td>
    </tr>
    <% } %>
  </table>

  <h1 class="seat-heading">Seating Arrangement</h1>
  <p style="text-align: center; font-size: 12px; margin: 2px">
    (Denoted by roll number)
  </p>
  <table>
    <% for (let i = 0; i < room.topArray.length; i++) { %>
    <tr>
      <% for (let j = 0; j < room.topArray[i].length; j++) { %>
      <td class="seat"><%= room.topArray[i][j] %></td>
      <% } %>
    </tr>
    <% } %>
  </table>
</div>
<% } %>
